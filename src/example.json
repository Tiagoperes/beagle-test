{
  "type":"card",
  "style": {
    "flexDirection":"row"
  },
  "children":[
    {
      "type":"image",
      "url":"https://www.petlove.com.br/images/breeds/193436/profile/original/beagle-p.jpg",
      "description":"Foto do Cãozinho Bolado",
      "style": {
        "width":"400px",
        "height":"400px"
      }
    },
    {
      "type":"container",
      "style": {
        "flexDirection": "column",
        "padding": "20px"
      },
      "children":[
        {
          "type":"title",
          "value":"Cãozinho Bolado"
        },
        {
          "type":"text",
          "style": {
            "fontSize":"12px"
          },
          "value":"Vamos ver se esse cão combina com você! Digite seu e-mail, nome e sua idade nos campos abaixo:"
        },
        {
          "type":"form",
          "style": {
            "justifyContent":"space-between",
            "flexDirection":"column",
            "flex":1
          },
          "url":"https://webhook.site/0f248bf3-ad8b-4269-bd2a-3ba99d15781a",
          "method":"post",
          "successMessage":"Legal! Agora é só aguardar a resposta por e-mail!",
          "errorMessage":"Ocorreu um erro ao enviar o formulário.",
          "children":[
            {
              "type":"container",
              "style": {
                "flexDirection":"column"
              },
              "children":[
                {
                  "type":"input",
                  "name":"email",
                  "placeholder":"E-mail",
                  "validations":["required", "email"]
                },
                {
                  "type":"input",
                  "name":"name",
                  "placeholder":"Nome",
                  "validations":["required"]
                },
                {
                  "type":"input",
                  "name":"age",
                  "placeholder":"Idade",
                  "validations":["required", "validateMajority"]
                }
              ]
            },
            {
              "type":"container",
              "style": {
                "flexDirection":"row",
                "marginTop": "20px"
              },
              "children":[
                {
                  "type":"button",
                  "title":"Verificar",
                  "action":"submit",
                  "primary":true,
                  "style": {
                    "marginRight": "15px"
                  }
                },
                {
                  "type":"button",
                  "title":"Limpar",
                  "action":"reset"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}